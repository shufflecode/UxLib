<Window x:Class="UxLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="240,0,237,0">
            <Button Content="Primary" BorderBrush="#FF121F33" >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF4D6FAC"/>
                        <GradientStop Color="#FF4A6CA9" Offset="0.5"/>
                        <GradientStop Color="#FF305492" Offset="0.5"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <!--Default Style aus lookAnd feel zieht an (Weil: kein x:Key)-->
        </StackPanel>

    </Grid>
</Window>
